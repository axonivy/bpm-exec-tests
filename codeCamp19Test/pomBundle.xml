<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.axonivy.supplements</groupId>
	<artifactId>bpm.exec.test19</artifactId>
	<version>7.0.0-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>
	
	<properties>
		<tycho.version>1.4.0</tycho.version>
		<java.version>1.8</java.version>
		<ivy.engine.dir>${project.build.directory}/ivyEngine</ivy.engine.dir>
		<project-build-plugin.version>7.0.1</project-build-plugin.version>
	</properties>

	<repositories>
		<repository>
			<id>ivy.nightly.release</id>
			<layout>p2</layout>
			<url>http://zugprodrone/p2/lts.ivy.core/</url>
		</repository>
        <repository>
			<id>thirdparty.integration.luna</id>
			<layout>p2</layout>
			<url>http://zugprodrone/p2/thirdparty.integration.luna/</url>
		</repository>
        <repository>
			<id>vn.integration</id>
			<layout>p2</layout>
			<url>http://zugprodrone/unzip/maven/prefixed/vn.integration/ch.ivyteam.ivy/ch.ivyteam.vn.p2/7.0.x-SNAPSHOT</url>
		</repository>
        <repository>
			<id>platform.extension</id>
			<layout>p2</layout>
			<url>http://zugprodrone/p2/static.integration.luna/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>sonatype</id>
			<url>https://oss.sonatype.org/content/repositories/snapshots</url>
			<snapshots>
				<updatePolicy>always</updatePolicy>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    </dependencies>

	<build>
	    <outputDirectory>${project.build.directory}/test-classes</outputDirectory>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>hack.integrate.classes.from.project.under.test</id>
            <!-- for test working with Dataclasses and other sources in assertions -->
            <phase>validate</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target/test-classes</outputDirectory>
              <resources>          
                <resource>
                  <directory>../codeCamp19/classes</directory>
                  <filtering>false</filtering>
                </resource>
              </resources>              
            </configuration>            
          </execution>
        </executions>
      </plugin>
      <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-surefire-plugin</artifactId>
    <version>3.0.0-M3</version>
    <dependencies>
      <dependency>
        <groupId>org.apache.maven.surefire</groupId>
        <artifactId>surefire-junit47</artifactId>
        <version>3.0.0-M3</version>
      </dependency>
    </dependencies>
    <executions>
    <execution>
    	<id>bpm.exec.test.demo</id>
    	<phase>test</phase>
    	<goals><goal>test</goal></goals>
    	<configuration>
    	
    	</configuration>
    </execution>
    </executions>
  </plugin>
		</plugins>
		
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-compiler-plugin</artifactId>
					<configuration>
						<source>${java.version}</source>
						<target>${java.version}</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>target-platform-configuration</artifactId>
					<version>${tycho.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
